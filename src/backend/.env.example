# =============================================================================
# Core Configuration
# =============================================================================
# Application environment (development/production/test)
NODE_ENV=development

# Server port number
PORT=8080

# API version prefix
API_VERSION=v1

# Logging level (debug/info/warn/error)
LOG_LEVEL=info

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL host address
POSTGRES_HOST=localhost

# PostgreSQL port number
POSTGRES_PORT=5432

# PostgreSQL database name
POSTGRES_DB=workflow_automation

# PostgreSQL username
POSTGRES_USER=postgres

# PostgreSQL password (min 16 chars, mixed case, numbers, special chars)
POSTGRES_PASSWORD=your_secure_password

# =============================================================================
# Authentication Configuration
# =============================================================================
# Secret key for JWT token signing (min 32 chars)
JWT_SECRET=your_jwt_secret_key

# JWT token expiration time
JWT_EXPIRES_IN=1h

# Refresh token expiration time
REFRESH_TOKEN_EXPIRES_IN=7d

# Enable Multi-Factor Authentication
MFA_ENABLED=true

# MFA issuer name for TOTP
MFA_ISSUER=WorkflowAutomation

# =============================================================================
# AI Service Configuration
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key

# OpenAI organization ID
OPENAI_ORG_ID=your_openai_org_id

# Default language model to use
DEFAULT_LLM_MODEL=gpt-4

# Model temperature for response randomness (0.0-1.0)
MODEL_TEMPERATURE=0.7

# Maximum tokens for model responses
MAX_TOKENS=1000

# Vector database API key
VECTOR_DB_API_KEY=your_pinecone_api_key

# Vector database environment
VECTOR_DB_ENVIRONMENT=production

# =============================================================================
# Security Configuration
# =============================================================================
# AES-256-GCM encryption key (32 chars)
ENCRYPTION_KEY=your_32_char_aes_key

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://app.domain.com

# Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX=100

# Path to TLS certificate file
TLS_CERT_PATH=/etc/certs/tls.crt

# Path to TLS private key file
TLS_KEY_PATH=/etc/certs/tls.key