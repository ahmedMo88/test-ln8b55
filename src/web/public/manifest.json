{
  "name": "Workflow Automation Platform",
  "short_name": "Workflows",
  "description": "Enterprise-grade no-code/low-code workflow automation platform",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#FFFFFF",
  "theme_color": "#2196F3",
  "orientation": "any",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": [
    "productivity",
    "business",
    "utilities",
    "development",
    "enterprise"
  ],
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64",
      "type": "image/x-icon",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "url": "/dashboard",
      "description": "View workflow dashboard",
      "icons": [
        {
          "src": "assets/icons/dashboard.svg",
          "sizes": "24x24",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Create Workflow",
      "url": "/workflows/new",
      "description": "Create a new workflow",
      "icons": [
        {
          "src": "assets/icons/create.svg",
          "sizes": "24x24",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Integrations",
      "url": "/integrations",
      "description": "Manage service integrations",
      "icons": [
        {
          "src": "assets/icons/integration.svg",
          "sizes": "24x24",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/dashboard.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard View"
    },
    {
      "src": "screenshots/flow-editor.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Flow Editor"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/*",
            "application/pdf"
          ]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "background-sync"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+workflow",
      "url": "/workflow?id=%s"
    }
  ],
  "iarc_rating_id": "",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "id": "workflow-automation-platform",
  "file_handlers": [
    {
      "action": "/open-workflow",
      "accept": {
        "application/json": [".workflow"]
      }
    }
  ]
}